{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "module": "nodenext",
        "sourceMap": true,
        "allowJs": false,
        "target": "es5",
        "outDir": ".build",
        "moduleResolution": "nodenext",
        "lib": ["es2015", "dom"],
        "rootDir": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts", "src"],
    "exclude": ["node_modules"]
}
